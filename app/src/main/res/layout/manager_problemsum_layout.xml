<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:clipToPadding="true"
        android:fitsSystemWindows="true"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:id="@+id/top_rl"
            android:layout_marginTop="10dp"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/computerback"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"/>
            <Button
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:id="@+id/Manager_ProblemSum_back"/>
            <sousuo.ClearEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/Manager_ProblemSum_back"
                android:background="@drawable/shape"
                android:layout_centerInParent="true"
                android:completionThreshold="1"
                android:id="@+id/Manager_ProblemSum_SouSuo"
                android:hint="请输入企业名称"
                android:gravity="center"
                android:textSize="15sp"
                android:padding="10dp"
                android:singleLine="true"
                android:layout_marginRight="60dp"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/mapsousuo"
                android:layout_marginRight="70dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:id="@+id/Manager_AllState"
                android:layout_marginLeft="50dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="全部状态"
                    android:textSize="13sp"
                    android:clickable="false"
                    android:id="@+id/allState"
                    android:layout_centerVertical="true"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/daosanjiao"
                    android:layout_toRightOf="@id/allState"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:clickable="false"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:id="@+id/Manager_AllTime"
                android:layout_alignParentRight="true"
                android:layout_marginRight="50dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="全部时间"
                    android:textSize="13sp"
                    android:id="@+id/alltime"
                    android:layout_centerVertical="true"

                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/daosanjiao"
                    android:layout_toRightOf="@id/alltime"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    />
            </RelativeLayout>
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/yl01"
            android:layout_marginTop="5dp"
            />
        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Manager_mListView"/>

    </LinearLayout>


