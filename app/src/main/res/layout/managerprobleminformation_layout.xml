                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="15sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:textColor="@color/black"
                android:text="项目"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/xiangmu"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_biankuang"
            android:id="@+id/ManagerProblemInformation_Type"
            android:padding="10dp"
            />
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="提报问题"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:textColor="@color/black"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_biankuang"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="请输入"
        android:padding="10dp"
        android:id="@+id/ManagerProblemInformation_reason"
        android:layout_marginBottom="5dp"
        android:textColor="@color/black"/>
    <LinearLayout
        android:layout_width="160dp"
        android:layout_height="80dp"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:id="@+id/COMPANY_PHOTO"
        android:layout_gravity="center">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/take_photo"
            android:src="@mipmap/image"
            />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="提交"
        android:textColor="@color/white"
        android:gravity="center"
        android:background="@color/blue"
        android:padding="10dp"
        android:layout_margin="20dp"
        android:id="@+id/Pro_Submit"
        />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
