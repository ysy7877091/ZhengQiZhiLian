<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ProblemSum_COMPANY"
            android:text="公司"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:textColor="@color/black"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/ProblemSum_COMPANY"
            android:layout_below="@id/ProblemSum_COMPANY"
            android:text="ll"
            android:id="@+id/ProblemSum_person"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="1122"
            android:id="@+id/ProblemSum_state"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="1122"
            android:id="@+id/ProblemSum_time"
            android:layout_marginRight="15dp"
            android:layout_below="@id/ProblemSum_state"
            android:layout_marginTop="10dp"
            />
    </RelativeLayout>

</LinearLayout>
